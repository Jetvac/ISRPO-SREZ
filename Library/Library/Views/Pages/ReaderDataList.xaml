<Page x:Class="Library.Views.Pages.ReaderDataList"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReaderDataList">

    <Grid Loaded="PageStarted">
        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <RowDefinition/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border HorizontalAlignment="Left" Margin="15 0 0 0">
                <GroupBox Background="#E6F3F3" BorderBrush="Transparent" BorderThickness="0" Width="200" Height="35">
                    <TextBox x:Name="ReaderSearchInput" BorderBrush="Transparent" Background="Transparent" VerticalAlignment="Center" Text="Поиск по читателю" TextChanged="ReaderSearchInput_TextChanged" PreviewMouseDown="ReaderSearchInput_PreviewMouseDown"/>
                </GroupBox>
            </Border>

            <StackPanel Grid.Column="2" Margin="0 0 15 0" Orientation="Horizontal" HorizontalAlignment="Right">
                <Image Source="/src/images/img_570846.png" Width="40" Margin="0 0 10 0" MouseDown="ReaderTicket_MouseDown"/>
                <Image Source="/src/images/img_20646.png" Width="40" MouseDown="CSVOutput_click"/>
            </StackPanel>
        </Grid>

        <ScrollViewer Grid.Row="1"  Margin="15" Background="#E6F3F3">
            <ListView Grid.Row="1" Grid.Column="1" x:Name="ReaderDataWrap" ScrollViewer.CanContentScroll="True" Background="#FFE6F3F3" Grid.ColumnSpan="3">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ContentControl MouseDoubleClick="ContentControl_MouseDoubleClick">
                            <Grid>
                                <StackPanel Orientation="Vertical" Width="Auto" Height="auto">
                                    <Ellipse MinWidth="100" Width="auto" Height="auto" MinHeight="100">
                                        <Ellipse.Fill>
                                            <ImageBrush ImageSource="{Binding Photo}" Stretch="UniformToFill" ></ImageBrush>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <TextBlock HorizontalAlignment="Center" Text="{Binding FullNameInitial}"></TextBlock>

                                </StackPanel>

                            </Grid>
                        </ContentControl>

                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Width="600" ></WrapPanel>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
            </ListView>
        </ScrollViewer>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <Image Source="/src/images/tlb-logout-1.png" RenderTransformOrigin="0.5,0.5" MouseDown="ExitButton_Click" HorizontalAlignment="Left" Margin="10">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>

            <Image Grid.Column="2" Source="/src/images/logo_vis222.png" Margin="0 0 15 0" Height="70"/>
        </Grid>
    </Grid>
</Page>
