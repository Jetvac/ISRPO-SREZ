<Page x:Class="Library.Views.Pages.ReaderInfo"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReaderInfo">

    <Grid Margin="15">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="51*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="156*"></RowDefinition>
            <RowDefinition Height="19*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.ColumnSpan="6">
            <ComboBox x:Name="AuthorCB" MinHeight="30" MinWidth="150" Margin="0,35" ></ComboBox>
            <ComboBox x:Name="GenresCB" MinHeight="30" MinWidth="150" Margin="15,35"></ComboBox>
            <ComboBox x:Name="PublCB" MinHeight="30" MinWidth="150" Margin="0,35"/>
            <GroupBox Header="Дата" Margin="5 15 5 20" >
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <DatePicker />
                    <DatePicker />
                </StackPanel>
            </GroupBox>
        </StackPanel>
        <DataGrid Grid.Row="1" Grid.Column="1" x:Name="DgReaderBook" Background="#FFDCF6F0" Margin="0 0 0 15" Grid.ColumnSpan="6" AutoGenerateColumns="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Срок возвращения" Binding="{Binding DateForReturn}"></DataGridTextColumn>
                <DataGridTextColumn Header="Автор Название" Binding="{Binding Book.AuthorTitle}"></DataGridTextColumn>
                <DataGridTextColumn Header="Издательство" Binding="{Binding Book.PublisherEx}"></DataGridTextColumn>
                <DataGridTextColumn Header="Количество" Binding="{Binding Book.Height}"></DataGridTextColumn>
                <DataGridTemplateColumn Header="Отметка о возвращении">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Image Source="{Binding Path=Path}" Width="40" Height="40"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="0" Orientation="Horizontal">
                <Image Source="/src/images/img_400436 (2).png" Width="45" Margin="5, 0, 0, 0"/>
                <Image Source="/src/images/exicon-1024x1024.png" Width="45" Margin="5, 0, 0, 0"/>
                <Image Source="/src/images/img_210051.png" Width="45" Margin="5, 0, 0, 0"/>
                <Image Source="/src/images/img_99111 (1).png" Width="45" Margin="5, 0, 0, 0"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Image MouseDown="Image_MouseDown" VerticalAlignment="Center" Source="/src/images/returns-3-of-the-margin-1e07d250d5f71c08ba8c529f43576b4f.png" Width="45"/>
                <Image Width="100" Source="/src/images/logo_vis222.png"/>
            </StackPanel>
        </Grid>

    </Grid>
</Page>
