<Page x:Class="Library.Views.Pages.ReaderListData"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Library.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ReaderListData">

    <Grid Loaded="Grid_Loaded">
        <Grid.RowDefinitions>
            <RowDefinition Height="55"/>
            <RowDefinition/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Поиск по читателю -->
            <Border HorizontalAlignment="Left" Margin="15 0 0 0">
                <GroupBox Background="#E6F3F3" BorderBrush="Transparent" BorderThickness="0" Width="200" Height="35">
                    <TextBox x:Name="ReaderSearchInput" BorderBrush="Transparent" Background="Transparent" VerticalAlignment="Center" Text="Поиск по читателю" TextChanged="ReaderSearch_TextChanged"/>
                </GroupBox>
            </Border>

            <!-- Выгрузка отчётности -->
            <StackPanel Grid.Column="2" Margin="0 0 15 0" Orientation="Horizontal" HorizontalAlignment="Right">
                <!-- Выгрузка в Word -->
                <Image Source="/Views/Pages/img_570846.png" Width="40" Margin="0 0 10 0"/>
                <!-- Выгрузка в CSV -->
                <Image Source="/Views/Pages/img_20646.png" Width="40" MouseDown="CSVOutput_click"/>
            </StackPanel>
        </Grid>

        <!-- Панель клиентов -->
        <ScrollViewer Grid.Row="1"  Margin="15" Background="#E6F3F3">
            <WrapPanel HorizontalAlignment="Center">
                <ItemsControl x:Name="ReaderDataList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Vertical" Width="150" Height="200" Margin="10">
                                <Ellipse Width="150" Height="150" HorizontalAlignment="Center">
                                    <Ellipse.Fill>
                                        <ImageBrush ImageSource="{Binding Photo}" Stretch="UniformToFill"/>
                                    </Ellipse.Fill>
                                </Ellipse>
                                <TextBlock Text="{Binding FullName}" HorizontalAlignment="Center"/>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            </WrapPanel>
        </ScrollViewer>

        <!-- Нижняя панель -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>

            <!-- Кнопка завершения сеанса -->
            <Image Source="/Views/Pages/tlb-logout-1.png" RenderTransformOrigin="0.5,0.5" MouseDown="ExitButton_Click" HorizontalAlignment="Left" Margin="10">
                <Image.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="-1"/>
                        <SkewTransform/>
                        <RotateTransform/>
                        <TranslateTransform/>
                    </TransformGroup>
                </Image.RenderTransform>
            </Image>

            <Image Grid.Column="2" Source="./logo_vis222.png" Margin="0 0 15 0" Height="70"/>
        </Grid>
    </Grid>
</Page>
